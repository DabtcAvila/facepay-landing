{
  "version": 2,
  "outputDirectory": "dist",
  "buildCommand": "cp *.html *.mp4 *.jpg *.webp *.js *.css *.json *.xml *.txt *.vtt dist/ 2>/dev/null || true",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}